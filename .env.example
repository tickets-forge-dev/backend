# Authentication & Session
SESSION_SECRET=your-session-secret-key-here

# Firebase (Google Cloud)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-...@....iam.gserviceaccount.com

# Firebase Web Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# GitHub Integration
NEXT_PUBLIC_GITHUB_OAUTH_CLIENT_ID=your-github-oauth-client-id

# LLM Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Ollama (optional, for local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# PostHog Analytics
# Get your API key from https://posthog.com
POSTHOG_API_KEY=phc_your_posthog_api_key
POSTHOG_HOST=https://us.posthog.com

# Frontend PostHog Configuration
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.posthog.com

# Email Configuration (for notifications)
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@forge.dev

# Feature Flags
ENABLE_JIRA_INTEGRATION=true
ENABLE_LINEAR_INTEGRATION=true
