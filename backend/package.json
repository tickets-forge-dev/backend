{
  "name": "@repo/backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' nest start --watch",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' nest build",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' node dist/main",
    "start:dev": "NODE_OPTIONS='--max-old-space-size=4096' nest start --watch",
    "start:debug": "NODE_OPTIONS='--max-old-space-size=4096' nest start --debug --watch",
    "start:prod": "NODE_OPTIONS='--max-old-space-size=4096' node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.0.10",
    "@apidevtools/swagger-parser": "^12.1.0",
    "@google-cloud/firestore": "^8.2.0",
    "@mastra/core": "1.0.0",
    "@nestjs/bull": "^10.1.0",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@octokit/rest": "^20.1.2",
    "@repo/shared-types": "workspace:*",
    "@types/express-session": "^1.18.2",
    "bull": "^4.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express-session": "^1.19.0",
    "firebase-admin": "^12.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "simple-git": "^3.30.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.10.1",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.11",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
